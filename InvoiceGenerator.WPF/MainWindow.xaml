<Window x:Class="InvoiceGenerator.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InvoiceGenerator.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100px"/>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" x:Name="tbCsvPath" HorizontalAlignment="Left" Height="Auto" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="564" IsReadOnly="True"/>
        <Button Grid.Row="0" x:Name="btPickFile" Click="btPickFile_Click" Height="Auto" Width="203" Margin="594,10,0,0" VerticalAlignment="Top">Vyber soubor položek</Button>

        <TextBlock Grid.Row="2" Height="Auto" Width="Auto" HorizontalAlignment="Left"/>
        <TextBlock Grid.Row="2" Height="Auto" Width="Auto" HorizontalAlignment="Left"/>
    </Grid>
</Window>
